/* pages/reviews/reviews.wxss */

.header {
  position: relative;
  width: 100%;
  height: 520rpx;
}

/*图片*/
.controls-bg {
  width: 100%;
  height: 520rpx;
}

/* 播放按钮 */
.play {
  position: absolute;
  left: 326rpx;
  top: 200rpx;
  z-index: 111;
  width: 74rpx;
  height: 74rpx;
}

.btn-img {
  width: 74rpx;
  height: 74rpx;
}

/* 视频 */
.video {
  z-index: 99;
  width: 100%;
  height: 520rpx;
}

.details {
  position: absolute;
  left: 30rpx;
  top: 459rpx;
  width: 690rpx;
  height: 130rpx;
  background-color: #fff;
  border: 1px solid #ebebeb;
  border-radius: 10rpx;
  box-shadow: 0px 5px 10px #ebebeb;
}

/* 商品名称 */
.title {
  font-size: 30rpx;
  line-height: 30rpx;
  font-weight: 600;
  margin: 32rpx 0 18rpx 25rpx;
}

/* 点赞留言浏览 */
.like {
  display: flex;
}

.active {
  width: 33%;
  display: flex;
  font-size: 17rpx;
  line-height: 24rpx;
  color: #ccc;
  padding-left: 28rpx;
}

.love-img {
  width: 24rpx;
  height: 22rpx;
  margin-right: 10rpx;
}

.text-img {
  width: 26rpx;
  height: 25rpx;
  margin-right: 10rpx;
}

.browse-img {
  width: 37rpx;
  height: 23rpx;
  margin-right: 10rpx;
}

/* 所有评论 */
.content {
  padding: 119rpx 0 98rpx;
}

.parameter {
  font-size: 28rpx;
  line-height: 28rpx;
  margin-left: 59rpx;
}

.lis {
  width: 640rpx;
  display: flex;
  margin-top: 29rpx;
  margin-left: 57rpx;
  border-bottom: 1rpx solid #e1e1e1;
}

.icon {
  width: 75rpx;
  height: 75rpx;
  margin-right: 19rpx;
}

.character {
  flex: 1;
}

/* 昵称 */
.name {
  font-size: 25rpx;
  line-height: 25rpx;
  font-weight: 500;
  margin-top: 14rpx;
}

.data {
  display: flex;
  margin: 22rpx 0 22rpx 4rpx;
}

/* 时间 */
.time {
  font-size: 20rpx;
  line-height: 28rpx;
  color: #9a9a9a;
}

.thumb {
  display: flex;
}

/* 点赞 */
.nice {
  width: 28rpx;
  height: 28rpx;
  margin: 0 6rpx 0 36rpx;
}

.thumb-text {
  font-size: 18rpx;
  line-height: 28rpx;
}

/* 留言 */
.specific {
  font-size: 22rpx;
  line-height: 31rpx;
  margin-bottom: 30rpx;
}

/* 底部发布评论 */
.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  height: 98rpx;
  display: flex;
  background-color: #fff;
  border-top: 1px solid #ebebeb;
  box-shadow: 0px 5px 10px #ebebeb;
}

.input {
  width: 545rpx;
  height: 58rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  margin: 19rpx 0 0 30rpx;
  padding-left: 25rpx;
}

.release {
  width: 98rpx;
  height: 60rpx;
  font-size: 23rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  border-radius: 10rpx;
  background-image: linear-gradient(to right, #f64301 , #fa9f0a);
  margin: 19rpx 0 0 20rpx;
}