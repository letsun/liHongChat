<!--pages/reviews/reviews.wxml-->

<view class="container">
  <!--头部图片-->
  <view class="header">
    <!-- 图片 -->
    <image class="controls-bg" wx:if="{{!isPlay}}" src="https://qiniu.wnw108.com/20191225/con/7.png"></image>
    <!-- 播放按钮 -->
    <view class="play" catchtap="playTap" wx:if="{{!isPlay}}">
        <image class="btn-img" src="https://qdwzvue-1254182596.cos.ap-guangzhou.myqcloud.com/qdwzAct/liHongChat/1_24.png"></image>
    </view>
    <!-- 视频 -->
    <video wx:if="{{isPlay}}" class="video" id="video" src="https://sqtf.gsmn.com.cn/mtkj/upload/files/official/ef3ad8d065ed4de090428ab292abdb89.mp4" show-center-play-btn="{{btnShow}}" bindfullscreenchange="fullscreenTap" custom-cache="{{false}}"></video>
  </view>
  <view class="details">
    <!--商品名称-->
    <view class="title">凉拌手擀面</view>
    <!-- 点赞留言浏览 -->
    <view class="like">
      <view class="active love">
        <image class="love-img" src="https://qdwzvue-1254182596.cos.ap-guangzhou.myqcloud.com/qdwzAct/liHongChat/1_72.png"></image>
        <view class="love-text">897</view>
      </view>
      <view class="active text">
        <image class="text-img" src="https://qdwzvue-1254182596.cos.ap-guangzhou.myqcloud.com/qdwzAct/liHongChat/1_73.png"></image>
        <view class="text-text">125</view>
      </view>
      <view class="active browse">
        <image class="browse-img" src="https://qdwzvue-1254182596.cos.ap-guangzhou.myqcloud.com/qdwzAct/liHongChat/1_74.png"></image>
        <view class="browse-text">1.2万浏览</view>
      </view>
    </view>
  </view>
  <!--所有评论-->
  <view class="content">
    <view class="parameter">所有评论</view>
    <view class="all">
      <view class="lis">
        <image class="icon" src="https://qdwzvue-1254182596.cos.ap-guangzhou.myqcloud.com/qdwzAct/liHongChat/1_54.png"></image>
        <view class="character">
          <!-- 昵称 -->
          <view class="name">皮卡丘</view>
          <view class="data">
            <!-- 时间 -->
            <view class="time">一小时前</view>
            <view class="thumb">
              <!-- 点赞 -->
              <image class="nice" src="https://qdwzvue-1254182596.cos.ap-guangzhou.myqcloud.com/qdwzAct/liHongChat/1_71.png"></image>
              <view class="thumb-text">109</view>
            </view>
          </view>
          <!-- 留言 -->
          <view class="specific">学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了</view>
        </view>
      </view>
      <view class="lis">
        <image class="icon" src="https://qdwzvue-1254182596.cos.ap-guangzhou.myqcloud.com/qdwzAct/liHongChat/1_54.png"></image>
        <view class="character">
          <!-- 昵称 -->
          <view class="name">皮卡丘</view>
          <view class="data">
            <!-- 时间 -->
            <view class="time">一小时前</view>
            <view class="thumb">
              <!-- 点赞 -->
              <image class="nice" src="https://qdwzvue-1254182596.cos.ap-guangzhou.myqcloud.com/qdwzAct/liHongChat/1_71.png"></image>
              <view class="thumb-text">109</view>
            </view>
          </view>
          <!-- 留言 -->
          <view class="specific">学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了学到了</view>
        </view>
      </view>
    </view>
  </view>
  <!-- 底部发布评论 -->
  <view class="footer">
    <input class="input" placeholder="请输入评论"></input>
    <view class="release">发布</view>
  </view>
</view>