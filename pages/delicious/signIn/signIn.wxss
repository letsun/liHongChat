/* pages/delicious/signIn/signIn.wxss */

/*头部背景*/

.header {
  position: relative;
  width: 100%;
  height: 400rpx;
  background: url('https://qdwzvue-1254182596.cos.ap-guangzhou.myqcloud.com/qdwzAct/liHongChat/1_17.png') no-repeat;
  background-size: 100% 100%;
  text-align: center;
  padding: 20rpx 0;
}

.signin {
  height: 200rpx;
  width: 200rpx;
}

.header-text {
  /* position: absolute; *//* left: 0;
  right: 0;
  text-align: center;
  top: 200rpx; */
  color: #fff;
}

/*头部图片*/

.main {
  position: absolute;
  left: 30rpx;
  top: 290rpx;
  z-index: 11;
  width: 690rpx;
  height: 200rpx;
  border-radius: 10rpx;
  display: flex;
  background: #fff;
  box-shadow: 0rpx 0rpx 10rpx 5rpx #f2f2f2;
}

.main-item {
  width: 50%;
  text-align: center;
  padding: 40rpx 0rpx;
}

.main-item image {
  width: 26px;
  height: 26px;
  vertical-align: middle;
  margin-right: 20rpx;
}

.main-item-txet {
  font-size: 50rpx;
}

.main-item-txet1 {
  color: #666;
}

.calendar {
  position: absolute;
  top: 520rpx;
  left: 30rpx;
  right: 30rpx;
  box-shadow: 0rpx 0rpx 10rpx 5rpx #f2f2f2;
  border-radius: 10rpx;
}

.calendar-header {
  /* justify-content: center; */
  position: relative;
  text-align: center;
  padding: 30rpx 0;
}

.calendar-header image {
  width: 14rpx;
  height: 20rpx;
  padding: 20rpx 25rpx;
}

.calendar-back {
  position: absolute;
  top: 20rpx;
  left: 160rpx;
}

.calendar-Forward {
  position: absolute;
  top: 20rpx;
  right: 160rpx;
}

.calendar-con {
  padding: 0 30rpx;
  display: flex;
  flex-wrap: wrap;
}

.calendar-item {
  width: 90rpx;
  text-align: center;
  padding: 22.5rpx 0;
}

.active {
  background: #fff3f3;
  border-radius: 50%;
}

.mask {
  position: fixed;
  top: 0px;
  left: 0px;
  bottom: 0px;
  right: 0px;
  background: rgba(0, 0, 0, 0.6);
  z-index: 99;
  display: block;
}

.mask-con {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: url('https://qdwzvue-1254182596.cos.ap-guangzhou.myqcloud.com/qdwzAct/liHongChat/1_44.png') no-repeat;
  background-size: 100% 100%;
  height: 760rpx;
  width: 722rpx;
}

.mask-cona {
  position: absolute;
  top: 400rpx;
  left: 160rpx;
  right: 160rpx;
  text-align: center;
}

.mask-title {
  font-weight: 100;
  font-size: 40rpx;
}

.mask-num {
  color: #f42f30;
  padding: 20rpx 0;
}

.mask-text {
  color: #999;
}

.mask-btn {
  margin: 30rpx;
  padding: 20rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  background: linear-gradient(to right, #f63200, #fbba0a);
  color: #f4f4f4;
}
