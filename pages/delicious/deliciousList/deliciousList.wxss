.recipe {
  position: relative;
  width: 690rpx;

  margin: 0 auto 33rpx;
  border-radius: 10rpx;
  border: 1px solid #f3f3f3;
  box-shadow: 0px 0px 10px #f3f3f3;
}

.photo {
  height: 370rpx;
  width: 690rpx;
}

