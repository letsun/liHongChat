.container {
    position: absolute;
    left: 0;
    top: 50%;
    z-index: 1;

    width: 100%;
    height: auto;

    -webkit-transform: translateY(-50%);
}
.slider-code .title{
	margin-left: 24rpx;
	font-size:28rpx;
	font-family:PingFang-SC-Medium;
	color:rgba(51,51,51,1);
}
.codes{
	margin-top: 20rpx;
	white-space:nowrap;
	width: auto;
	padding: 30rpx 0;

}
.con-con{
	display:flex;
	flex-direction: column;
}
.con-title{
	display:flex;
	color:#C0C0C0;
	font-size:24rpx;
}
.con-right{
	display:flex;
	flex-direction: column;
}
.code-item{
	display: inline-block;
	width: 185rpx;
	height: 185rpx;
	margin-left:30rpx;
	box-shadow: 0 0 2px  #e5e5e5
}
.code-item:last-child{
	margin-right: 30rpx;
}
.picture{
	width: 300px;
	height: 266px;
	box-shadow: 0 0 5px 1px #e5e5e5;
	margin: 0 auto;
	margin-top: 33rpx;
}
.btn{
	width:600rpx;
	height:84rpx;
	background:#68BD48;
	border-radius:42rpx;
	margin: 0 auto;
	margin-top: 50rpx;
	margin-bottom:50rpx;
	color:rgba(255,255,255,1);
	font-size: 32rpx;
}