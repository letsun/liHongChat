.shake {
	animation: shakeAni 2s linear infinite;
	-webkit-animation: shakeAni 2s linear infinite;
}

@-webkit-keyframes shakeAni {
	0% {
		transform: rotate(4deg);
	}

	50% {
		transform: rotate(-4deg);
	}

	100% {
		transform: rotate(4deg);
	}
}

