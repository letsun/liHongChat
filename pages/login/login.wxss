  background-image: linear-gradient(to right, #f63200 , #fbba0a);
  margin: 44rpx 0 0 110rpx;
}

.later {
  width: 448rpx;
  height: 68rpx;
  font-size: 27rpx;
  line-height: 70rpx;
  text-align: center;
  color: #f62f05;
  border-radius: 10rpx;
  border: 1rpx solid #f62f05;
  margin: 19rpx 0 0 110rpx;
}

/* 提示 */
.prompt {
  font-size: 23rpx;
