  width: 223rpx;
  padding: 76rpx 0 0 264rpx;
}

/* 成功激活 */
.success {
  font-size: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-weight: 600;
  margin-top: 57rpx;
}

.become {
  font-size: 24rpx;
  line-height: 24rpx;
  text-align: center;
  color: #989898;
  margin-top: 27rpx;
}

/* 完善资料 */
