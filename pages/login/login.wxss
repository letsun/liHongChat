  width: 670rpx;
  height: 400rpx;
  background-color: #f8f8f8;
  margin: 88rpx 0 0 40rpx;
}

.text {
  font-size: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-weight: 600;
  padding-top: 56rpx;
}

.gain {
  margin-top: 10rpx;
}

.immediately {
  width: 450rpx;
  height: 70rpx;
  font-size: 27rpx;
  line-height: 70rpx;
  text-align: center;
