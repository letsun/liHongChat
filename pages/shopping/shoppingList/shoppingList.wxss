/* pages/logs/logs.wxss */

.container {
  width: 100%;
  height: 100%;
}

/*顶部背景图片*/
.bg {
  width: 100%;
  height: 381rpx;
}

/*头部图片*/
.image {
  position: absolute;
  left: 30rpx;
  top: 110rpx;
  width: 690rpx;
  height: 320rpx;
  border-radius: 15rpx;
}

/*导航*/
.nav {
  height: 55rpx;
  display: flex;
  padding-top: 120rpx;
  margin-left: 14rpx;
  width: 710rpx;
  white-space:nowrap;

  /* overflow: hidden; */
  /* overflow-y: auto; */
/* overflow-x: scroll; */
}

.goods {
  position: relative;
  height: 55rpx;
  display: inline-block;
  margin:0 10rpx;
  
}

.shopping {
  font-size: 26rpx;
  line-height: 28rpx;
  color: #999;
  margin: 0 25rpx;
}

.active {
  font-size: 28rpx;
  line-height: 28rpx;
  font-weight: 600;
  color: #333;
}

.scoll {
  position: absolute;
  left: 0rpx;
  right: 0rpx;
  bottom: 10rpx;
  width: 36rpx;
  height: 7rpx;
  margin: auto;
}

.img {
  display: none;
}

/*商品内容*/
.content {
  height: 100%;
  margin-top: 30rpx;
}

.shop {
  width: 310rpx;
  height: 340rpx;
  margin: 10rpx 0rpx 10rpx 30rpx;

  padding: 10rpx;
  float: left;
  box-shadow: 0rpx 0rpx 10rpx 5rpx #f4f4f4;
  border-radius: 10rpx;
}

.shop-img {
  max-width: 310rpx;
  max-height: 222rpx;
}

.text {
  width: 328rpx;
  height: 119rpx;
  margin-top: 16rpx;
  position: relative;
}

/* 商品标题 */
.title {
  margin-left: 21rpx;
}

.integral {
  width: 328rpx;
  display: flex;
  margin: 15rpx 0 0 21rpx;
}

/* 商品需要的积分 */
.need {
  color: #f63200;
  display: flex;
}

.number {
  font-weight: bold;
}

.small {
  font-size: 18rpx;
  padding-top: 5rpx;
  line-height: 38rpx;
}

/* 商品兑换 */
.exchange {
  position: absolute;
  right: 20rpx;
  bottom:30rpx;

  width: 78rpx;
  height: 37rpx;
  font-size: 21rpx;
  line-height: 37rpx;
  text-align: center;
  color: #fff;
  border-radius: 10rpx;
  background-image: linear-gradient(to right, #f63200 , #fbba0a);
  /* margin-left: 133rpx; */
}

.tisi {
  text-align: center;
  /* padding-top: 200rpx; */
  font-size: 24rpx;
}