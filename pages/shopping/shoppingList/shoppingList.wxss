/* pages/logs/logs.wxss */

.container {
  width: 100%;
  height: 100%;
}

/*顶部背景图片*/
.bg {
  width: 100%;
  height: 380rpx;
}

/*头部图片*/

swiper{
  position: absolute;
  left: 30rpx;
  top: 100rpx;
  width: 690rpx;
  height: 320rpx;
  border-radius: 15rpx;
}
swiper image {
  width: 690rpx;
  height: 320rpx;
  border-radius: 15rpx;
}

/*导航*/
.nav {
  height: 55rpx;
  /* display: flex; */
  padding-top: 60rpx;
  margin-left: 14rpx;
  width: 710rpx;
  white-space:nowrap;

  /* overflow: hidden; */
  /* overflow-y: auto; */
/* overflow-x: scroll; */
}

.goods {
  position: relative;
  height: 55rpx;
  display: inline-block;
  /* margin:0 10rpx; */
  
}

.shopping {
  font-size: 26rpx;
  line-height: 28rpx;
  color: #999;
  margin: 0 25rpx;
}

.active {
  font-size: 28rpx;
  line-height: 28rpx;
  /* font-weight: 600; */
  color: #333;
}

.scoll {
  position: absolute;
  left: 0rpx;
  right: 0rpx;
  bottom: 10rpx;
  width: 36rpx;
  height: 7rpx;
  margin: auto;
}

.img {
  display: none;
}

/*商品内容*/
.content {
  height: 100%;
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
  
}

.shop {
  width: 310rpx;

  margin: 10rpx 0rpx 10rpx 30rpx;

  padding: 10rpx;

  box-shadow: 0rpx 0rpx 10rpx 5rpx #f4f4f4;
  border-radius: 10rpx;
  display: inline-block;
}

.shop-img {
  width: 310rpx;
  height: 310rpx;
}

.text {

  padding-left: 10rpx;
  margin-top: 16rpx;
  position: relative;
}

/* 商品标题 */
.title {

}

.integral {
  width: 328rpx;
  display: flex;
  margin-top: 15rpx;
}

/* 商品需要的积分 */
.need {
  color: #f63200;
  display: flex;
  width: 60%;
}

.number {
  font-weight: bold;
}

.small {
  font-size: 18rpx;
  padding-top: 5rpx;
  line-height: 38rpx;
}

/* 商品兑换 */
.exchange {
  /* position: absolute;
  right: 20rpx;
  bottom:30rpx; */

  width: 78rpx;
  height: 37rpx;
  font-size: 21rpx;
  line-height: 37rpx;
  text-align: center;
  color: #fff;
  border-radius: 10rpx;
  background-image: linear-gradient(to right, #f63200 , #fbba0a);

}

.tisi {
  text-align: center;
  margin: auto;
  font-size: 24rpx;

}