/* pages/submit/submit.wxss */

/*选择收货地址*/

.header {
  height: 63rpx;
  display: flex;
  padding-top: 33rpx;
}

.map {
  width: 30rpx;
  margin-left: 41rpx;
}

.choose {
  font-size: 23rpx;
  color: #989898;
  margin-left: 31rpx;
  margin-right: 369rpx;
}

.img {
  width: 15rpx;
}

/*边框*/

.border {
  width: 750rpx;
  height: 5rpx;
}

/*订单清单*/

.list {
  font-size: 29rpx;
  line-height: 29rpx;
  font-weight: 600;
  margin: 42rpx 0 0 41rpx;
}

/*订单清单内容*/

.details {
  width: 620rpx;
  display: flex;
  margin: 30rpx 0 0 69rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.shop {
  width: 136rpx;
  height: 136rpx;
}

.shopping {
  margin: 16rpx 180rpx 0 29rpx;
}

.good {
  font-size: 25rpx;
  line-height: 25rpx;
}

.integral {
  font-size: 22rpx;
  line-height: 22rpx;
  color: #fd5524;
  margin: 57rpx 0 0 3rpx;
}

.number {
  margin-top: 23rpx;
}

/*订单清单合计*/

.total {
  display: flex;
  font-size: 23rpx;
  line-height: 23rpx;
  margin-top: 16rpx;
  padding-left: 490rpx;
}

.together {
  width: 110rpx;
  height: 23rpx;
  text-align: right;
}

.total-integral {
  color: #f42e00;
  margin-left: 16rpx;
}

/*弹出框*/

.bg {
  position: fixed;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 9;
  display: none;
}

.small-bg {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 536rpx;
  height: 333rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.prompt {
  width: 536rpx;
  height: 82rpx;
  font-size: 33rpx;
  line-height: 82rpx;
  text-align: center;
  border-bottom: 1rpx solid #f1f1f1;
}

.need {
  width: 536rpx;
  height: 168rpx;
  font-size: 29rpx;
  line-height: 29rpx;
  text-align: center;
  border-bottom: 1rpx solid #f1f1f1;
}

.spend {
  padding: 43rpx 0 12rpx;
}

.or {
  width: 536rpx;
  height: 81rpx;
  display: flex;
}

.active {
  width: 269rpx;
  height: 81rpx;
  font-size: 26rpx;
  line-height: 81rpx;
  text-align: center;
}

.sure {
  color: #fff;
  background-color: #f52f02;
  border-radius: 0 0 10rpx 0;
}

/*订单备注*/

.desc {
  height: 88rpx;
  display: flex;
  background-color: #fafafa;
  margin-top: 25rpx;
  padding-left: 56rpx;
}

.note {
  font-size: 29rpx;
  line-height: 88rpx;
}

.input {
  height: 88rpx;
  font-size: 23rpx;
  line-height: 88rpx;
  margin-left: 34rpx;
}

.tfooter {
  height: 100rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  display: flex;
  box-shadow: 0rpx 0rpx 10rpx 5rpx #f4f4f4;
}

.footer-item {
  width: 50%;
  text-align: center;
}

.footer-item span {
  color: #f52f20;
}

.footer-item:first-child {
  background: #fff;
  padding: 10rpx 0rpx;
}

.footer-item:last-child {
  background: #f52f20;
  color: #fefffe;
  line-height: 100rpx;
  font-size: 30rpx;
}
