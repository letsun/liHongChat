/* pages/orders/orders.wxss */

/*导航条*/

.infor {
  width: 100%;
  height: 100%;
  display: flex;
  border-top: 4rpx solid #f5f5f5;
}

.main {
  padding-bottom: 30rpx;
}

.nav-ation {
  position: relative;
  width: 33%;
  height: 49rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  text-align: center;
  color: #989898;
  margin-top: 35rpx;
}

.state:before {
  content: "";
  position: absolute;
  left: 0;
  top: -17rpx;
  width: 3rpx;
  height: 37rpx;
  background-color: #f2f2f2;
}

.active {
  font-size: 29rpx;
  line-height: 29rpx;
  text-align: center;
  color: #333;
}

.active:after {
  content: "";
  position: absolute;
  left: 109rpx;
  bottom: 0;
  width: 36rpx;
  height: 7rpx;
  border-radius: 10rpx;
  background-image: linear-gradient(to right, #f63200, #fbba0a);
}

/*待发货内容*/

.content {
  width: 660rpx;
  height: 100%;
  margin: 29rpx 0 0 30rpx;
  padding-left: 29rpx;
  border: 1px solid #e3e3e3;
  border-radius: 10rpx;
  box-shadow: 0px 0px 20px #e3e3e3;
}

.order {
  padding-top: 25rpx;
  overflow: hidden;
}

.serial {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #676767;
  float: left;
}

.wait {
  font-size: 24rpx;
  line-height: 24rpx;
  float: right;
  margin-right: 33rpx;
}

/*商品内容*/

.details {
  width: 635rpx;
  height: 178rpx;
  display: flex;
  border-top: 1rpx solid #f2f2f2;
  border-bottom: 1rpx solid #f2f2f2;
  margin-top: 20rpx;
}

.img {
  width: 136rpx;
  height: 136rpx;
  margin-top: 22rpx;
}

.shopping {
  width: 290rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  margin: 44rpx 0 0 17rpx;
}

.shop {
  font-size: 25rpx;
  line-height: 25rpx;
  margin: 42rpx 0 0 110rpx;
}

.number {
  font-size: 20rpx;
  line-height: 20rpx;
  color: #676767;
  margin: 32rpx 0 0 50rpx;
}

.total {
  width: 635rpx;
  height: 66rpx;
  font-size: 25rpx;
  line-height: 66rpx;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
}

.kdinfo {
  flex: 1;
}

.Integral {
  color: #f52f02;
  flex: 1;
  text-align: right;
}

/*收货信息*/

.goods {
  font-size: 20rpx;
  line-height: 20rpx;
  color: #666;
  margin-top: 22rpx;
}

.specific {
  display: flex;
  font-size: 22rpx;
  line-height: 22rpx;
  color: #666;
  margin: 7rpx 0 23rpx 109rpx;
}

.courier {
  font-size: 21rpx;
  line-height: 31rpx;
  color: #656565;
  padding: 20rpx;
  margin-left: -25rpx;
  background-color: #f6f6f6;
  border-radius: 0 0 10rpx 10rpx;
}

.courier-item {
  display: flex;
  padding-bottom: 20rpx;
}

.delivery {
  width: 130rpx;
  position: relative;
}

.express {
  flex: 1;
  display: flex;
}

.kdinfo {
  padding-right: 20rpx;
}

.kdinfodetail {
  padding: 5rpx 10rpx;
  border: 1rpx solid #999;
  display: inline-block;
  line-height: 20px;
  border-radius: 10rpx;
}

.kdinfo span:first-child {
  padding-right: 20rpx;
}

.zwsj {
  /* margin: auto; */
  text-align: center;
  line-height: 100rpx;
}
