/* pages/delicious/signIn/signIn.wxss */

/*头部背景*/

.bg {
  width: 100%;
  height: 381rpx;
}

.header {
 color: #666;
 font-size: 24rpx;
 padding: 30rpx 30rpx 0rpx 30rpx;
}



.calendar {
  /* position: absolute;
  top: 520rpx;
  left: 30rpx;
  right: 30rpx; */

  margin: 30rpx;
  box-shadow: 0rpx 0rpx 10rpx 5rpx #f2f2f2;
  border-radius: 10rpx;
}

.calendar-header {
  /* justify-content: center; */
  position: relative;
  text-align: center;
  padding: 30rpx 0;
}

.calendar-header image {
  width: 14rpx;
  height: 20rpx;
  padding: 20rpx 25rpx;
}

.calendar-back {
  position: absolute;
  top: 20rpx;
  left: 160rpx;
}

.calendar-Forward {
  position: absolute;
  top: 20rpx;
  right: 160rpx;
}

.calendar-con {
  padding: 0 30rpx;
  display: flex;
  flex-wrap: wrap;
}

.calendar-item {
  width: 90rpx;
  text-align: center;
  padding: 22.5rpx 0;
  font-size: 28rpx;
}

.active {
  background: #fff3f3;
  border-radius: 50%;
  color: #FE5D4B;
}

/*底部固定按钮*/
.footer {
  position: fixed;
  right: 0;
  bottom: 25rpx;
  z-index: 111;
}

/*按钮图片*/
.sign {
  width: 144rpx;
  height: 158rpx;
}

