/* pages/comment/comment.wxss */

/*评论*/
.record {
  width: 659rpx;
  /* height: 291rpx; */
  margin: 30rpx 0 30rpx 30rpx; 
  padding-left: 30rpx;
  padding-bottom: 20rpx;
  border: 1px solid #f1f1f1;
  border-radius: 10rpx;
  box-shadow: 0px 0px 20px #f1f1f1;
}

/*评论内容*/
.give {
  font-size: 25rpx;
  line-height: 30rpx;
  margin: 34rpx 30rpx 36rpx;
  display: flex;
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 3;
overflow: hidden;
}

/*商品内容*/
.text {
  width: 613rpx;
  height: 130rpx;
  background-color: #f9f9f9;
  display: flex;
  margin-top: 20rpx;
}

/*商品*/
.noodles {
  width: 275rpx;
  font-size: 22rpx;
  line-height: 22rpx;
  margin: 45rpx 0 0 32rpx;
}

/*商品图片*/
.img {
  width: 195rpx;
  height: 109rpx;
  margin: 10rpx 0 0 80rpx;
}

/*评论时间*/
.time {
  font-size: 20rpx;
  color: #999;
  margin: 20rpx 0 0 403rpx;
}