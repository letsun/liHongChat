/* pages/address/address.wxss */

/*个人信息*/

.personal {
  padding: 30rpx 0 0 64rpx;
  border-top: 2rpx solid #f2f2f2;
}

/*昵称电话*/

.content {
  display: flex;
}

/*昵称*/

.name {
  font-size: 25rpx;
  line-height: 25rpx;
}

/*电话*/

.tel {
  font-size: 21rpx;
  line-height: 21rpx;
  margin: 0 20rpx;
}

.default {
  width: 50rpx;
  height: 23rpx;
  font-size: 19rpx;
  line-height: 21rpx;
  color: #f62d03;
  text-align: center;
  border: 1rpx solid #f52f02;
  border-radius: 10rpx;
}

/*地址*/

.ssqx {
  font-size: 22rpx;
  line-height: 22rpx;
  color: #989898;
  margin: 21rpx 0 29rpx;
}

/*编辑删除*/

.main {
  height: 37rpx;
  display: flex;
  padding: 20rpx 0 13rpx;
  border-top: 1rpx solid #f2f2f2;
  border-bottom: 5rpx solid #f2f2f2;
}

/*设为默认*/

.modify {
  padding-left: 64rpx;
  margin-right: 200rpx;
}

.old {
  position: relative;
}

.set:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 28rpx;
  height: 28rpx;
  border: 1rpx solid #9d9d9d;
  border-radius: 50%;
}

.set {
  font-size: 21rpx;
  line-height: 28rpx;
  color: #999;
  padding-left: 40rpx;
}

.new {
  display: flex;
}

.img {
  width: 38rpx;
  height: 38rpx;
}

.none {
  display: none;
}

.active {
  font-size: 21rpx;
  line-height: 28rpx;
  color: #f42e01;
}

/*编辑*/

.editor {
  display: flex;
  margin-top: 6rpx;
}

.editor-img {
  width: 27rpx;
  height: 27rpx;
}

.editor-text {
  font-size: 21rpx;
  line-height: 27rpx;
  color: #b0b0b0;
  margin: 0 48rpx 0 10rpx;
}

/*删除*/

.del {
  display: flex;
  margin-top: 6rpx;
}

.del-img {
  width: 26rpx;
  height: 25rpx;
}

.del-text {
  font-size: 21rpx;
  line-height: 25rpx;
  color: #b0b0b0;
  margin-left: 10rpx;
}

.tfooter {
  height: 100rpx;
}
.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  color: #f4f4f4;
  font-size: 30rpx;
  text-align: center;
  background: #fff;
  box-shadow: 0rpx 0rpx 10rpx 5rpx;
}

.footer-text {
  margin: 10rpx 100rpx;
  line-height: 80rpx;
  border-radius: 10rpx;

  background: linear-gradient(to right, #f64904, #f99408);
  box-shadow: 0rpx 0rpx 10rpx 5rpx;
}
