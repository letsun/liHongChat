  margin: 20rpx 0 0 32rpx;
}

.noodles {
  font-size: 22rpx;
  line-height: 22rpx;
  margin-bottom: 31rpx;
}

.noodles-time {
  font-size: 20rpx;
  line-height: 20rpx;
  color: #9a9a9a;
}

