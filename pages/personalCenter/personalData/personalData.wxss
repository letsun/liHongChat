/* pages/complete/complete.wxss */

.container {
    padding-bottom: 20rpx;
}

/* 填写内容 */
.write {
  margin-top: 21rpx;
}

.write:nth-last-child(2){
  padding-bottom: 30rpx;
}

/* 填写内容的标题 */
.title {
  height: 24rpx;
  display: flex;
  margin-bottom: 24rpx;
}

/* 必填项 */
.asterisk {
  font-size: 18rpx;
  line-height: 24rpx;
  color: #f00202;
  margin: 0 11rpx 0 43rpx;
}

.specific {
  font-size: 24rpx;
  line-height: 24rpx;
}

/* 输入框 */
.text {
  width: 571rpx;
  height: 68rpx;
  font-size: 23rpx;
  line-height: 68rpx;
  border: 1rpx solid #e2e2e2;
  border-radius: 10rpx;
  margin-left: 111rpx;
  padding-left: 20rpx;
 
}

.color {
   color: #777
}

/* 提交按钮 */
.commit {
  width: 490rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  border-radius: 10rpx;
  background-image: linear-gradient(to right, #f63200 , #fbba0a);

  margin: 0 auto;
}


.mask {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 99;
  background: rgba(0, 0, 0, 0.6);
}

.mask-con {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

.mask-con-bg {

  width: 750rpx;
  height: 490rpx;  
}

.mask-con-text {
  position: absolute;
  top: 320rpx;
  left: 230rpx;
  right: 270rpx;
  margin: auto;
  z-index: 10;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  color: #FCF1E3;
  text-shadow: 3rpx 5rpx 8rpx  red;
}

.mask-con-btn {
  max-width: 328rpx;
  max-height: 113rpx;
  position: absolute;
  bottom: -40rpx;
  left: -50rpx;
  right: 0;
  margin: auto;
}


