<!--pages/address/address.wxml-->
<view class="container">
  <view class="address" data-id="{{index}}" wx:for="{{5}}" wx:key="{{index}}">
    <!--个人信息-->
    <view class="personal">
      <!--昵称电话-->
      <view class="content">
        <!--昵称-->
        <view class="name">我是昵称</view>
        <!--电话-->
        <view class="tel">188***66666</view>
        <view class="default" wx:if="{{is}}">默认</view>
      </view>
      <!--地址-->
      <view class="ssqx">广东省,深圳市,宝安区,宝源路,F518时尚创意园,F6栋,302室</view>
    </view>
    <!--编辑删除-->
    <view class="main">
      <!--设为默认-->
      <view class="modify">
        <view class="old" wx:if="{{!is}}" catchtap="tapFunc"> 
          <view class="set">设为默认</view>
        </view>
        <view class="new" wx:if="{{is}}">
          <image class="img" src="../image/1_48.png"></image>
          <view class="active">设为默认</view>
        </view>
      </view>
      <!--编辑-->
      <view class="editor">
        <image class="editor-img" src="../image/1_49.png"></image>
        <view class="editor-text">编辑</view>
      </view>
      <!--删除-->
      <view class="del">
        <image class="del-img" src="../image/1_50.png"></image>
        <view class="del-text">删除</view>
      </view>
    </view>
  </view>
</view>
