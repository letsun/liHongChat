/* pages/reviews/reviews.wxss */

.header {
  position: relative;
  width: 100%;
  height: 520rpx;
}

/*头部图片*/
.controls-bg {
  width: 100%;
  height: 520rpx;
}

.play {
  position: absolute;
  left: 326rpx;
  top: 200rpx;
  z-index: 111;
  width: 74rpx;
  height: 74rpx;
}

.btn-img {
  width: 74rpx;
  height: 74rpx;
}

.video {
  z-index: 99;
  width: 100%;
  height: 520rpx;
}

.details {
  position: absolute;
  left: 30rpx;
  top: 459rpx;
  width: 690rpx;
  height: 130rpx;
  background-color: #fff;
  border: 1px solid #ebebeb;
  border-radius: 10rpx;
  box-shadow: 0px 5px 10px #ebebeb;
}

.title {
  font-size: 30rpx;
  line-height: 30rpx;
  font-weight: 600;
  margin: 32rpx 0 18rpx 25rpx;
}

.like {
  display: flex;
}

.active {
  width: 33%;
  display: flex;
  font-size: 17rpx;
  line-height: 24rpx;
  color: #ccc;
  padding-left: 28rpx;
}

.love-img {
  width: 24rpx;
  height: 22rpx;
  margin-right: 10rpx;
}

.text-img {
  width: 26rpx;
  height: 25rpx;
  margin-right: 10rpx;
}

.browse-img {
  width: 37rpx;
  height: 23rpx;
  margin-right: 10rpx;
}

.content {
  padding-top: 119rpx;
}

.parameter {
  font-size: 28rpx;
  line-height: 28rpx;
  margin-left: 59rpx;
}

.lis {
  width: 640rpx;
  display: flex;
  margin-top: 29rpx;
  margin-left: 57rpx;
  border-bottom: 1rpx solid #e1e1e1;
}

.icon {
  width: 75rpx;
  height: 75rpx;
  margin-right: 19rpx;
}

.character {
  flex: 1;
}

.name {
  font-size: 25rpx;
  line-height: 25rpx;
  font-weight: 500;
  margin-top: 14rpx;
}

.data {
  display: flex;
  margin: 22rpx 0 22rpx 4rpx;
}

.time {
  font-size: 20rpx;
  line-height: 28rpx;
  color: #9a9a9a;
}

.thumb {
  display: flex;
}

.nice {
  width: 28rpx;
  height: 28rpx;
  margin: 0 6rpx 0 36rpx;
}

.thumb-text {
  font-size: 18rpx;
  line-height: 28rpx;
}

.specific {
  font-size: 22rpx;
  line-height: 31rpx;
  margin-bottom: 30rpx;
}