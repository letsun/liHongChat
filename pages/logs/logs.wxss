/* pages/logs/logs.wxss */

.container {
  width: 100%;
  height: 100%;
}

/*顶部背景图片*/
.bg {
  width: 100%;
  height: 381rpx;
}

/*头部图片*/
.image {
  position: absolute;
  left: 30rpx;
  top: 159rpx;
  width: 690rpx;
  height: 300rpx;
}

/*导航*/
.nav {
  height: 55rpx;
  display: flex;
  padding-top: 120rpx;
  margin-left: 39rpx;
}

.goods {
  position: relative;
  height: 55rpx;
}

.shopping {
  font-size: 25rpx;
  line-height: 28rpx;
  color: #999;
  margin-right: 51rpx;
}

.active {
  font-size: 28rpx;
  line-height: 28rpx;
  color: #333;
}

.scoll {
  position: absolute;
  left: 39rpx;
  bottom: 0;
  width: 36rpx;
  height: 7rpx;
}

.img {
  display: none;
}

/*商品内容*/
.content {
  height: 100%;
  margin-top: 30rpx;
}

.shop {
  width: 328rpx;
  height: 341rpx;
  margin: 0 0 19rpx 32rpx;
  float: left;
}

.shop-img {
  width: 328rpx;
  height: 222rpx;
}

.text {
  width: 328rpx;
  height: 119rpx;
  margin-top: 16rpx;
}

/* 商品标题 */
.title {
  margin-left: 21rpx;
}

.integral {
  width: 328rpx;
  display: flex;
  margin: 25rpx 0 0 21rpx;
}

/* 商品需要的积分 */
.need {
  color: #f63200;
  display: flex;
}

.small {
  font-size: 18rpx;
  padding-top: 5rpx;
}

/* 商品兑换 */
.exchange {
  width: 78rpx;
  height: 37rpx;
  font-size: 21rpx;
  line-height: 37rpx;
  text-align: center;
  color: #fff;
  border-radius: 10rpx;
  background-image: linear-gradient(to right, #f63200 , #fbba0a);
  margin-left: 133rpx;
}